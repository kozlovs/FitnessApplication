<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/black"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/double_spacing"
    android:paddingVertical="@dimen/one_spacing">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="@dimen/icon_button_size"
        android:layout_height="@dimen/icon_button_size"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        tools:icon="@drawable/ic_play" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/one_spacing"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        tools:text="12:01" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/one_spacing"
        android:layout_weight="1"
        android:progressBackgroundTint="@color/white"
        android:progressTint="@color/gray2"
        android:secondaryProgressTint="@color/gray1"
        android:thumbTint="@color/white"
        app:labelBehavior="gone"
        tools:progress="12" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/one_spacing"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        tools:text="15:00" />

</androidx.appcompat.widget.LinearLayoutCompat>